{
  "name": "volar-vue-native",
  "displayName": "Volar for Vue (Native TS)",
  "description": "Vue language support using the native TypeScript server (tsgo).",
  "version": "0.0.1",
  "publisher": "hlmpn",
  "private": true,
  "type": "commonjs",
  "engines": {
    "vscode": "^1.88.0"
  },
  "scripts": {
    "build": "bun run bundle",
    "watch": "bun scripts/build.ts --watch",
    "bundle": "bun scripts/build.ts",
    "package": "bunx --node vsce package",
    "check": "bun scripts/check.ts",
    "test:tsserver": "cd test/tslsp2 && go run main.go",
    "generate:deps": "go run scripts/create_deps.go",
    "typecheck": "bun scripts/typecheck.ts",
    "lint": "bunx --bun oxlint --type-aware --max-warnings 0 --deny-warnings .",
    "lint:single": "bunx --bun oxlint --type-aware --max-warnings 0 --deny-warnings",
    "format": "bunx --bun biome format -w ."
  },
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./dist/extension.js",
  "files": [
    "dist/extension.js",
    "dist/extension.js.map",
    "dist/vue-lsp.js",
    "dist/vue-lsp.js.map",
    "dist/node_modules",
    "languages",
    "schemas",
    "syntaxes",
    "LICENSE",
    "NOTICES.txt"
  ],
  "contributes": {
   	"jsonValidation": [
			{
				"fileMatch": [
					"tsconfig.json",
					"tsconfig.*.json",
					"tsconfig-*.json",
					"jsconfig.json",
					"jsconfig.*.json",
					"jsconfig-*.json"
				],
				"url": "./schemas/vue-tsconfig.schema.json"
			}
		],
		"languages": [
			{
				"id": "vue",
				"extensions": [
					".vue"
				],
				"configuration": "./languages/vue-language-configuration.json"
			},
			{
				"id": "markdown",
				"configuration": "./languages/markdown-language-configuration.json"
			},
			{
				"id": "html",
				"configuration": "./languages/sfc-template-language-configuration.json"
			},
			{
				"id": "jade",
				"configuration": "./languages/sfc-template-language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "vue",
				"scopeName": "source.vue",
				"path": "./syntaxes/vue.tmLanguage.json",
				"embeddedLanguages": {
					"source.vue": "vue",
					"text": "plaintext",
					"text.html.derivative": "html",
					"text.html.markdown": "markdown",
					"text.pug": "jade",
					"source.css": "css",
					"source.css.scss": "scss",
					"source.css.less": "less",
					"source.sass": "sass",
					"source.stylus": "stylus",
					"source.postcss": "postcss",
					"source.js": "javascript",
					"source.ts": "typescript",
					"source.js.jsx": "javascriptreact",
					"source.tsx": "typescriptreact",
					"source.coffee": "coffeescript",
					"meta.tag.js": "jsx-tags",
					"meta.tag.tsx": "jsx-tags",
					"meta.tag.without-attributes.js": "jsx-tags",
					"meta.tag.without-attributes.tsx": "jsx-tags",
					"source.json": "json",
					"source.json.comments": "jsonc",
					"source.json5": "json5",
					"source.yaml": "yaml",
					"source.toml": "toml",
					"source.graphql": "graphql"
				},
				"unbalancedBracketScopes": [
					"keyword.operator.relational",
					"storage.type.function.arrow",
					"keyword.operator.bitwise.shift",
					"meta.brace.angle",
					"punctuation.definition.tag"
				]
			},
			{
				"scopeName": "markdown.vue.codeblock",
				"path": "./syntaxes/markdown-vue.json",
				"injectTo": [
					"text.html.markdown"
				],
				"embeddedLanguages": {
					"meta.embedded.block.vue": "vue",
					"source.vue": "vue",
					"text": "plaintext",
					"text.html.derivative": "html",
					"text.html.markdown": "markdown",
					"text.pug": "jade",
					"source.css": "css",
					"source.css.scss": "scss",
					"source.css.less": "less",
					"source.sass": "sass",
					"source.stylus": "stylus",
					"source.postcss": "postcss",
					"source.js": "javascript",
					"source.ts": "typescript",
					"source.js.jsx": "javascriptreact",
					"source.tsx": "typescriptreact",
					"source.coffee": "coffeescript",
					"meta.tag.js": "jsx-tags",
					"meta.tag.tsx": "jsx-tags",
					"meta.tag.without-attributes.js": "jsx-tags",
					"meta.tag.without-attributes.tsx": "jsx-tags",
					"source.json": "json",
					"source.json.comments": "jsonc",
					"source.json5": "json5",
					"source.yaml": "yaml",
					"source.toml": "toml",
					"source.graphql": "graphql"
				}
			},
			{
				"scopeName": "mdx.vue.codeblock",
				"path": "./syntaxes/mdx-vue.json",
				"injectTo": [
					"source.mdx"
				],
				"embeddedLanguages": {
					"mdx.embedded.vue": "vue",
					"source.vue": "vue",
					"text": "plaintext",
					"text.html.derivative": "html",
					"text.html.markdown": "markdown",
					"text.pug": "jade",
					"source.css": "css",
					"source.css.scss": "scss",
					"source.css.less": "less",
					"source.sass": "sass",
					"source.stylus": "stylus",
					"source.postcss": "postcss",
					"source.js": "javascript",
					"source.ts": "typescript",
					"source.js.jsx": "javascriptreact",
					"source.tsx": "typescriptreact",
					"source.coffee": "coffeescript",
					"meta.tag.js": "jsx-tags",
					"meta.tag.tsx": "jsx-tags",
					"meta.tag.without-attributes.js": "jsx-tags",
					"meta.tag.without-attributes.tsx": "jsx-tags",
					"source.json": "json",
					"source.json.comments": "jsonc",
					"source.json5": "json5",
					"source.yaml": "yaml",
					"source.toml": "toml",
					"source.graphql": "graphql"
				}
			},
			{
				"scopeName": "vue.directives",
				"path": "./syntaxes/vue-directives.json",
				"injectTo": [
					"source.vue",
					"text.html.markdown",
					"text.html.derivative",
					"text.pug"
				]
			},
			{
				"scopeName": "vue.interpolations",
				"path": "./syntaxes/vue-interpolations.json",
				"injectTo": [
					"source.vue",
					"text.html.markdown",
					"text.html.derivative",
					"text.pug"
				]
			},
			{
				"scopeName": "vue.sfc.style.variable.injection",
				"path": "./syntaxes/vue-sfc-style-variable-injection.json",
				"injectTo": [
					"source.vue"
				]
			}
		],
		"semanticTokenScopes": [
			{
				"language": "vue",
				"scopes": {
					"component": [
						"support.class.component.vue",
						"entity.name.type.class.vue"
					]
				}
			},
			{
				"language": "markdown",
				"scopes": {
					"component": [
						"support.class.component.vue",
						"entity.name.type.class.vue"
					]
				}
			},
			{
				"language": "html",
				"scopes": {
					"component": [
						"support.class.component.vue",
						"entity.name.type.class.vue"
					]
				}
			}
		],
		"breakpoints": [
			{
				"language": "vue"
			}
		],
    "configuration": {
      "type": "object",
      "title": "Volar for Vue (Native TS)",
      "properties": {
        "vue.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace communication between VS Code and the Vue language server."
        },
        "vue.server.includeLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "vue"
          ],
          "description": "Languages to be handled by the Vue language server."
        }
      }
    },
    "commands": [
      {
        "command": "vue.action.restartServer",
        "title": "Restart Vue Language Server",
        "category": "Volar"
      }
    ]
  },
  "dependencies": {
    "@volar/vscode": "^2.4.23",
    "@vue/language-server": "^3.0.8",
    "@vue/typescript-plugin": "^3.0.8",
    "typescript": "^5.9.2",
    "typescript-language-server": "^5.0.0",
    "vscode-languageclient": "^9.0.1",
    "vue": "^3.5.22",
    "vue-typescript-plugin-pack": "^1.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "@types/vscode": "^1.100.0",
    "@typescript/native-preview": "^7.0.0-dev.20250924.1",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.8",
    "oxlint": "^1.18.0",
    "oxlint-tsgolint": "^0.2.0"
  },
  "trustedDependencies": [
    "@vscode/vsce-sign",
    "vue-typescript-plugin-pack"
  ]
}
