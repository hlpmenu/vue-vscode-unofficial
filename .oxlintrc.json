{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [ "typescript" ],
  "env": {
    "builtin": true,
    "es2024": true,
    "node": true
  },
  "ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "out/**",
    ".worktrees/**",
    "test/**",
    "language-tools/**",
    "ref/**",
    "plugin-shim/**",
    "package/**",
    "old.index.ts",
    "**/.git/**",
    "**/.vscode/**",
    "**/*.d.ts",
    "*.d.ts"
  ],
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "no-undef": "error",
    "no-redeclare": "error",
    "no-constant-condition": "error",
    "no-empty": "error",
    "no-fallthrough": "error",
    "use-isnan": "error",
    "valid-typeof": "error",
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-namespace": "error",
    "@typescript-eslint/consistent-type-imports": "off"
  },
  "overrides": [
    {
      "files": [ "*.d.ts" ],
      "rules": {
        "no-unused-vars": "off"
      }
    },
    {
      "files": [ "scripts/**/*.{ts,js}" ],
      "env": {
        "commonjs": true,
        "node": true
      },
      "rules": {
        "no-unused-vars": [
          "warn",
          {
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_",
            "caughtErrorsIgnorePattern": "^_"
          }
        ]
      }
    }
  ]
}
