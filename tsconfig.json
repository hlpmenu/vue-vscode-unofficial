{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "rootDir": ".",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "sourceMap": true,
        "types": [ "@types/bun" ],

    },
    "typeAcquisition": { "enable": true },
    "skipLibCheck": true,
    "include": [ "src/**/*.ts", "src/**/*.js", "./index.ts", "scripts/**.{ts,js}", "test/**/*.vue" ],
    "exclude": [ "node_modules/**", "dist", "**/*.min.js", "**/*.bundle.js", "ref/**" ]
}
